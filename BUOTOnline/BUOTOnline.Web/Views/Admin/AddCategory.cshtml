@model BUOTOnline.Web.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "AddCategory";
}

<h2>AddCategory</h2>

@using (Html.BeginForm() )
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name:")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ParentId, "Parent:")
        @Html.DropDownListFor(m => m.ParentId, new SelectList(Model.Parents, "Id", "Name"), "Select", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AttributeIds, "Atributes:")
        @Html.DropDownListFor(m => m.AttributeIds, new SelectList(Model.Attributes, "Id", "Name"), "Select", new { @class = "form-control" })
    </div>

    <input value="Add" type="submit" class="btn btn-success" />
}